/*!
  \brief resource utility hack
  \author Jens Thiele
*/

ejs.ModuleLoader.load("EGachine");
ejs.ModuleLoader.load("File");

if ((argv.length<2)||(argv[1]=="-h")||(argv[1]=="--help")){
  stderr.write("Usage: egares [-h|--help|RESNAME] [FILE|-] [OPTION]...\n");
}else{
  var resname=argv[1];
  var resource="";
  var stream;
  if ((argv.length<3)||(argv[2]=="-"))
    stream=stdin;
  else
    stream=File.read(argv[2]);

  // copy resource from stream
  var s;
  while ((s=stream.read(1024))!="") {
    resource+=s;
  }

  var res=new Resource(resname,resource);
  var towrite="EGachine.addResource(\n";

  towrite+=res+");\n";
  eval(towrite);
  var dec=EGachine.getResource(resname).decode();
  if (dec!=resource)
    throw new Error("egares is buggy and something went wrong");
  // puh ;-) good luck
  stdout.write(towrite);
};
